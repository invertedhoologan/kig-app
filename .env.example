# Azure Configuration
NEXT_PUBLIC_AZURE_CONFIGURED=true

# JWT Secret for authentication
JWT_SECRET=your-secure-jwt-secret-here

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_TABLE_ENDPOINT=https://yourstorageaccount.table.core.windows.net/

# Azure AD B2C Configuration (Optional - for enterprise auth)
AZURE_AD_B2C_TENANT_NAME=your-tenant-name
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-client-secret
AZURE_AD_B2C_POLICY_NAME=B2C_1_SignUpSignIn

# Mapbox Configuration
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Application URLs
NEXT_PUBLIC_APP_URL=https://your-app-name.azurestaticapps.net
